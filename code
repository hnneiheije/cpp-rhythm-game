#include <iostream>
#include<windows.h>
#include<ctime>
#include<cstdlib>
using namespace std;
int main()
{
    char grid[20][4];
    char notes[4] = { 'w','a','s','d' };
    srand(time(0));
    int x;
    int score = 0;

    for (int i = 0; i < 20; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            grid[i][j] = ' ';
        }
    }

    while (true)
    {
        x = rand() % 4;
        grid[19][x]=notes[x];
        for (int i = 0; i < 20; i++)
        {
            for (int j = 0; j < 4; j++)
            {
                cout << grid[i][j];
            }
            cout << endl;
        }
        cout << "Score:" << score;
        if (GetAsyncKeyState('W'))
        {
            Beep(200, 100);
            if (grid[0][0] == 'w' || grid[1][0] == 'w')
            {
                score += 10;
            }
        }
        if (GetAsyncKeyState('A'))
        {
            Beep(250, 100);
            if (grid[0][1] == 'a' || grid[1][1] == 'a')
            {
                score += 10;
            }
        }
        if (GetAsyncKeyState('S'))
        {
            Beep(300, 100);
            if (grid[0][2] == 's' || grid[1][2] == 's')
            {
                score += 10;
            }
        }
        if (GetAsyncKeyState('D'))
        {
            Beep(350, 100);
            if (grid[0][3] == 'd' || grid[1][3] == 'd')
            {
                score += 10;
            }
        }

        for (int i = 0; i < 20; i++)
        {
            for (int j = 0; j < 4; j++)
            {
                if (grid[i][j] != ' ')
                {
                    if (i > 0)
                    {
                        grid[i - 1][j] = grid[i][j];
                        grid[i][j] = ' ';
                    }
                    else
                    {
                        grid[i][j] = ' ';
                    }
                }
            }
        }
        Sleep(200);
        system("cls");

    }
}
